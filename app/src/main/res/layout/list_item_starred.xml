              android:orientation="vertical">

    <TextView
        tools:text="Libery"
        android:id="@+id/item_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        tools:text="Libery"
        android:id="@+id/item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        tools:text="Libery"
        android:id="@+id/item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
