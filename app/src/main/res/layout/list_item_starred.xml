<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="16dp"
        tools:text="Libery"/>

    <TextView
        android:id="@+id/item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_full_name"
        android:paddingLeft="16dp"
        tools:text="Libery"/>

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:text="Libery"/>

    <TextView
        android:id="@+id/item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_desc"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        tools:text="Libery"/>

    <TextView
        android:id="@+id/item_start_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_desc"
        android:layout_toRightOf="@+id/item_type"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        tools:text="Libery"/>

    <TextView
        android:id="@+id/item_fork_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_desc"
        android:layout_toRightOf="@+id/item_start_count"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        tools:text="Libery"/>
</RelativeLayout>